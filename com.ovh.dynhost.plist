<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.ovh.dynhost</string>

  <key>WorkingDirectory</key>
  <string>[PUT PATH TO SCRIPT HERE]</string>	
  
  <key>ProgramArguments</key>
  <array>
    <string>dynhost.sh</string>
  </array>

  <key>Nice</key>
  <integer>1</integer>

  <key>StartInterval</key>
  <integer>60</integer>

  <key>RunAtLoad</key>
  <true/>

  <key>StandardErrorPath</key>
  <string>/var/log/dynhost.log</string>

  <key>StandardOutPath</key>
  <string>/var/log/dynhost.log</string>
</dict>
</plist>
